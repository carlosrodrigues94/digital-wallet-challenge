{
    "version": 3,
    "name": "Wallet API Gateway",
    "port": 8080,
    "timeout": "3s",
    "extra_config": {
        "telemetry/logging": {
            "level": "ERROR",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true
        },
        "telemetry/metrics": {
            "collection_time": "60s",
            "proxy_disabled": false,
            "router_disabled": false,
            "backend_disabled": false,
            "endpoint_disabled": false,
            "listen_address": ":8090"
        }
    },
    "endpoints": [
        {
            "endpoint": "/statement",
            "method": "GET",
            "input_headers": [
                "Authorization",
                "Content-Type"
            ],
            "backend": [
                {
                    "host": [
                        "http://statement_api:3000"
                    ],
                    "url_pattern": "/statement",
                    "extra_config": {}
                }
            ]
        },
        {
            "endpoint": "/deposits",
            "method": "POST",
            "input_headers": [
                "Authorization",
                "Content-Type"
            ],
            "backend": [
                {
                    "disable_host_sanitize": true,
                    "host": [
                        "http://deposit_api:3002"
                    ],
                    "url_pattern": "/deposits",
                    "extra_config": {}
                }
            ]
        },
        {
            "endpoint": "/withdrawals",
            "method": "POST",
            "input_headers": [
                "Authorization",
                "Content-Type"
            ],
            "backend": [
                {
                    "host": [
                        "http://withdrawal_api:3003"
                    ],
                    "url_pattern": "/withdrawals",
                    "extra_config": {}
                }
            ]
        }
    ]
}